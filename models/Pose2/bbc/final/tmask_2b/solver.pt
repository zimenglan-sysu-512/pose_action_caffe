# net pt
net: "models/Pose2/bbc/final/tmask_2b/train.pt"

# snapshot
snapshot: 1000

# snapshot prefix
snapshot_prefix: "../asserts/models/Pose2/bbc/final/tmask_2b/models/bbc"

# test: 1000
# n_images (1000) = test_iter(500) * batchsize(2)
test_iter: 500

# test when reaching the test_interval
test_interval: 1000

test_initialization: true

# 0.0001 fast convergence
base_lr: 0.0001 # 0.00000001

# Learning rate
lr_policy: "step"

# SGD
gamma: 0.0001
power: 0.75
momentum: 0.9
weight_decay: 0.0005

# Change learning rate
stepsize: 80000

# Iterations
max_iter: 80000

# Display
display: 200

# CPU or GPU
solver_mode: GPU

# GPU ID
device_id: 0
